@model IEnumerable<Product>
@{
    ViewData["Title"] = "List of Products";
}

<div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-xs-6 border-primary mb-3">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <div class="card-header text-white bg-info">
                                        <p class="card-text">
                                            <h5 class="card-title">
                                                @item.ProductName
                                                <a class="text-white float-right"><i class="badge-info bi-pencil-square"></i></a>
                                            </h5>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <img src="@item.ProductImageURL" width="100%" alt="@item.ProductName" />
                                </div>
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <p class="card-text">@item.ProductDescription</p>
                                        <p class="card-text"><b>Price:</b> $@item.ProductPrice</p>
                                        <p class="card-text"><b>Category:</b> @item.ProductCategory</p>
                                        <p class="card-text"><b>Shipping From:</b> @item.Ship.ShipAddress</p>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="card-footer">
                                        <p class="card-text">
                                            <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Show Details</a>
                                            <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart ($@item.ProductPrice)</a>
                                        </p>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                   
                }
           

</div>
