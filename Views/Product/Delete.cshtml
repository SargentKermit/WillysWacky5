@model NewProductVM
@using WillysWacky5.Data;
@{ 
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="clo-md-8 offset-2">
        <p>
            <h4>Delete</h4>
        </p>
        <div class="row">
            <div class="col-md-10 offset-2 nav-color">
                <form asp-action ="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group simple_text">
                                <label asp-for="ProductName"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group simple_text">
                                <label asp-for="ProductPrice"></label>
                                <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group simple_text">
                                <label asp-for="ProductImageURL"></label>
                                <input asp-for="ProductImageURL" class="form-control" />
                                <span asp-validation-for="ProductImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="form-group simple_text">
                                <label asp-for="ShipId"></label>
                                <select asp-for="ShipId" class="form-control" asp-items="ViewBag.Ships"></select>
                                <span asp-validation-for="ShipId" class="text-danger"></span>
                            </div>
                            <div class="form-group simple_text">
                                <label asp-for="ProductCategory"></label>
                                <select asp-for="ProductCategory" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                                <span asp-validation-for="ProductCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group simple_text">
                                <label asp-for="DistributorIds"></label>
                                <select asp-for="DistributorIds" class="form-control" asp-items="ViewBag.Distributors" multiple></select>
                                <span asp-validation-for="DistributorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group simple_text">
                                <label asp-for="ProductDescription"></label>
                                <textarea asp-for="ProductDescription" class="form-control" ></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100" id="ImageUrlPreview"  />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-danger float-right reddish" />
                        <a class="btn btn-secondary blueish2" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
        $("#ProductImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        } )
    </script>
}