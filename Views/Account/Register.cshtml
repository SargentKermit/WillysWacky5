@using WillysWacky5.Data.ViewModels
@model RegisterVM;

@{
    ViewData["Title"] = "Sign Up For Your Account";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Sign Up For Your Account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row nav-color">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group simple_text">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group simple_text">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <p>Password Must Contain:</p>

                    <p>- 6 Characters</p>
                    <p>- 1 Capital Letter</p>
                    <p>- 1 Lower Case Letter</p>
                    <p>- 1 Number</p>
                    <p>- 1 Special Character</p>
                    <div class="form-group simple_text">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group simple_text">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-success float-right greenish" type="submit" value="Sign up" />
                        <a class="btn btn-secondary blueish2" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>